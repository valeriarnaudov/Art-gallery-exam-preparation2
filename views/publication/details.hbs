<main>
    <section id="details-page">
        <h1>Details</h1>
        <article class="details-card">

            <article class="details-card-text">
                <h2>Title:<br> {{title}}</h2>
                <h3>Author: {{author.username}}</h3>
                <h3>Painting technique: {{paintnigTechnique}}</h3>
                <h3>Certificate of authenticity: {{certificate}}</h3>

                    {{#if user}}
                    <div class="buttons">
                        {{#if isAuthor}}
                            <a href="/publications/{{_id}}/edit" class="btn-edit">Edit</a>
                            <a href="/publications/{{_id}}/delete" class="btn-delete">Delete</a>
                        {{else}}
                            {{#if isShared}}
                            <p class="shared-pub">You already shared this publication</p>
                            {{else}}
                            <a href="/publications/{{_id}}/share" class="btn-share">Share publication</a>
                            {{/if}}
                        {{/if}}
                        
                    </div>
                    {{/if}}

            </article>

            <article class="details-card-image">
                <img src="{{artPicture}}" alt="{{title}}">
            </article>

        </article>
    </section>
</main>